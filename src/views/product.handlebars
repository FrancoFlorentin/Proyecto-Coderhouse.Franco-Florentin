<h1 class="text-center py-5 text-4xl uppercase font-bold text-gray-600">Producto</h1>

<a 
  href="/" 
  class="block size-fit mx-auto text-xl text-gray-500 font-semibold hover:text-amber-700 transition-colors mb-5"
>Ir al inicio</a>


<div class="w-full h-[600px]">
  <div class="mx-auto w-fit bg-white shadow-lg p-5 rounded-md grid grid-cols-2 gap-5">
    {{#if product}}

      <div class="flex items-center justify-center bg-gray-100 w-96 h-[500px] relative overflow-hidden">
        <p class="text-2xl font-bold text-gray-300">Imagen del producto</p>
        {{#unless product.status}}
          <p class="uppercase font-bold absolute w-full bg-red-300 text-center py-3 top-1/2 -translate-y-1/2  opacity-60">No disponible</p>
        {{/unless}}
      </div>
      <div class="flex flex-col w-full h-full max-w-[380px] justify-between">
        <div class="space-y-5">
          <p class="text-2xl uppercase mt-5 font-semibold text-slate-600 line-clamp-2">{{product.title}}</p>
          <p class="text-lg font-semibold text-slate-500 line-clamp-4">{{product.description}}</p>
        </div>

        <div>
          <p>Categor√≠a: {{product.category}}</p>
          <div class="flex mb-5 items-end gap-5">
            <p class="text-4xl font-bold text-red-400">${{product.price}}</p>
            <p class="text-slate-600 font-semibold">{{product.stock}} disponibles</p>
          </div>
          <button
            
            data-id={{product._id}}
            {{#if product.status}}
              class="add-to-cart bg-slate-600 hover:bg-slate-700 transition-all cursor-pointer text-white py-2 w-full"
            {{else}}
              disabled
              class="add-to-cart bg-slate-200 text-gray-600 cursor-pointer py-2 w-full"

            {{/if}}
          >Agregar al carrito</button>
        </div>
      </div>
    {{else}}
      <p>No existe el producto</p>
    {{/if}}

  </div>
</div>